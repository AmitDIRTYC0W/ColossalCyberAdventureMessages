include "map_coordinate.fbs";

struct IPAddress {
	fields:[uint8:4];
}

table AllocationUpdate {
	server:IPAddress;
	left_x:MapCoordinate;
	right_x:MapCoordinate;
}

struct Entity {
	id:uint32;
}

table SurroundingsUpdate {
	surrounding_entities:[Entity];
}

table ServerUpdate {
	allocation:AllocationUpdate;
	surroundings:SurroundingsUpdate;
}

root_type ServerUpdate;